.row(style="margin-bottom: 15px;")
  %ul.admin-header
    %li
      %h2 Categories
    %li 
      =link_to "Create A New Category", new_category_path, class: "btn btn-success"

- @categories.each do |category|
  .row.well
    .span12
      %h3.edit-linkable= category.name
      =link_to "Edit", edit_category_path(category), class: "edit-link"
    
    .row
      .span12
        -@featured_images.each do |image|
          -if image.category_id == category.id
            .thumbnail.span2
              %img(src="#{image.url}" style="height:100px; width:100px;")

         
.row(style="margin-bottom: 15px;")
  %ul.admin-header
    %li
      %h2 Images
    %li
      =link_to "Create A New Image", new_image_path, class: "btn btn-success"

.row.well
  .span12
    %p.edit-linkable There are currently #{@image_count} images in the system.
    =link_to "See all", images_path, class: "edit-link"

.row(style="margin-bottom: 15px;")
  %ul.admin-header
    %li
      %h2 Users
    %li
      =link_to "Create A New User", new_user_path, class: "btn btn-success"

.row.well
  .span12
    - @users.each do |user|
      %h3.edit-linkable #{user.name} 
      =link_to "Edit", edit_user_path(user), class: "edit-link"

